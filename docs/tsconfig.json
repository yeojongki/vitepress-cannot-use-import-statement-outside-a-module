{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "antdv": ["../packages/antdv"],
      "element": ["../packages/element"]
    },
    "types": ["vite/client"]
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules", "dist", "es", "lib", "script"]
}
